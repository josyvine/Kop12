<?xml version="1.0" encoding="utf-8"?>
<!-- UPDATED FILE: app/src/main/res/layout/dialog_media_picker.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C2E"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_picker_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Media"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- NEW: "Done" button for multi-image selection -->
        <Button
            android:id="@+id/btn_done_picker"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Done"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_close_picker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_phone_storage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"/>

            <Button
                android:id="@+id/btn_sd_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SD Card"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_filter"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search files..."
                android:textColor="@android:color/white"
                android:textColorHint="#999999"
                android:inputType="text"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_current_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controls_layout"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_media_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_current_path"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/tv_empty_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="This folder is empty."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"/>

</RelativeLayout>